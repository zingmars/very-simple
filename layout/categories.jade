extends base
block title
  title= page.title + " | " + config.title

block main
  article
    .container
      h1.label-title: = page.title
      .post
        if !(page.category)
          ul.listing
            for category in site.categories.sort('name').toArray()
              li
                a(href=url_for(category.path))= category.name
  include _partial/paginator.jade